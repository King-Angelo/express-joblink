<%- include('../partials/header') %>

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/agencies/browse">Agencies</a></li>
            <li class="breadcrumb-item"><a href="/agencies/<%= profile._id %>"><%= profile.companyName %></a></li>
            <li class="breadcrumb-item active" aria-current="page">Apply</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">Apply to <%= profile.companyName %></h2>
                </div>
                <div class="card-body">
                    <form action="/agencies/<%= profile._id %>/apply" method="POST" enctype="multipart/form-data">
                        <div class="mb-4">
                            <h4>Agency Details</h4>
                            <p><strong>Company:</strong> <%= profile.companyName %></p>
                            <p><strong>Location:</strong> <%= profile.location %></p>
                            <p><strong>Type:</strong> <%= profile.userType %></p>
                        </div>

                        <div class="mb-4">
                            <h4>Your Application</h4>
                            
                            <div class="form-group mb-3">
                                <label for="resume" class="form-label">Upload Resume</label>
                                <input type="file" 
                                       class="form-control" 
                                       id="resume" 
                                       name="resume" 
                                       accept=".pdf,.doc,.docx"
                                       required>
                                <div class="form-text">
                                    Accepted formats: PDF, DOC, DOCX (Max size: 5MB)
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label for="coverLetter" class="form-label">Cover Letter (Optional)</label>
                                <textarea class="form-control" 
                                          id="coverLetter" 
                                          name="coverLetter" 
                                          rows="5"
                                          placeholder="Tell us why you're interested in working with this agency..."></textarea>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            By submitting this application, you confirm that all information provided is accurate and true.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i> Submit Application
                            </button>
                            <a href="/agencies/<%= profile._id %>" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

