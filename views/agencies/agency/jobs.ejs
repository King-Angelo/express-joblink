<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Jobs - Agency</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<%- include('../../partials/navbar', { isAuthenticated: true, user: user }) %>
<div class="container mt-4">
    <h2>Manage Jobs</h2>
    <% if (jobs && jobs.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Location</th>
                    <th>Type</th>
                    <th>Posted</th>
                </tr>
            </thead>
            <tbody>
                <% jobs.forEach(job => { %>
                    <tr>
                        <td><%= job.title %></td>
                        <td><%= job.location %></td>
                        <td><%= job.type %></td>
                        <td><%= job.postedDate ? new Date(job.postedDate).toLocaleDateString() : '' %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <div class="alert alert-info">No jobs posted yet.</div>
    <% } %>
</div>
</body>
</html> 