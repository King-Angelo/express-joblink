<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Candidates - Agency</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<%- include('../../partials/navbar', { isAuthenticated: true, user: user }) %>
<div class="container mt-4">
    <h2>View Candidates</h2>
    <% if (applications && applications.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Candidate</th>
                    <th>Status</th>
                    <th>Applied</th>
                </tr>
            </thead>
            <tbody>
                <% applications.forEach(app => { %>
                    <tr>
                        <td><%= app.jobseeker?.name || 'N/A' %></td>
                        <td><%= app.status %></td>
                        <td><%= app.createdAt ? new Date(app.createdAt).toLocaleDateString() : '' %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <div class="alert alert-info">No candidates have applied yet.</div>
    <% } %>
</div>
</body>
</html> 