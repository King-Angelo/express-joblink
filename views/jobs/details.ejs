<%- include('../partials/header') %>

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/jobs">Jobs</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= job.title %></li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                    <h1 class="card-title h2"><%= job.title %></h1>
                    <h2 class="card-subtitle h5 text-muted mb-3"><%= job.company %></h2>
                </div>
                <% if (isAuthenticated) { %>
                    <button class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Apply Now
                    </button>
                <% } else { %>
                    <a href="/login" class="btn btn-outline-primary">
                        Login to Apply
                    </a>
                <% } %>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <i class="fas fa-map-marker-alt text-muted"></i>
                        <strong>Location:</strong> <%= job.location %>
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-briefcase text-muted"></i>
                        <strong>Job Type:</strong> <%= job.type %>
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-money-bill-wave text-muted"></i>
                        <strong>Salary:</strong> <%= job.salary %>
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-folder text-muted"></i>
                        <strong>Category:</strong> <%= job.category %>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <i class="fas fa-calendar text-muted"></i>
                        <strong>Posted:</strong> <%= new Date(job.postedDate).toLocaleDateString() %>
                    </div>
                    <div>
                        <strong>Required Skills:</strong>
                        <div class="mt-2">
                            <% job.skills.forEach(skill => { %>
                                <span class="badge bg-secondary me-2 mb-2"><%= skill %></span>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <h3>Job Description</h3>
                <div class="job-description">
                    <%= job.description %>
                </div>
            </div>

            <div class="mb-4">
                <h3>Requirements</h3>
                <ul class="list-group list-group-flush">
                    <% job.requirements.forEach(requirement => { %>
                        <li class="list-group-item">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <%= requirement %>
                        </li>
                    <% }) %>
                </ul>
            </div>

            <div class="text-center mt-4">
                <% if (isAuthenticated) { %>
                    <button class="btn btn-lg btn-primary">
                        <i class="fas fa-paper-plane me-2"></i> Apply for this Position
                    </button>
                <% } else { %>
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        Please <a href="/login" class="alert-link">login</a> to apply for this position.
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 