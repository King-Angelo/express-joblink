        </ul>
      </div>

      <!-- Quick Actions -->
      <div class="section">
        <div class="section-title">Quick Actions</div>
        <div style="display: flex; gap: 1rem;">
          <button class="btn btn-primary">Post New Job</button>
          <button class="btn btn-secondary">Add New Client</button>
          <button class="btn btn-secondary">Schedule Interview</button>
        </div>
      </div>
    </div>
  </div>
</body>
</html> 